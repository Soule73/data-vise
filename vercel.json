{
    "version": 2,
    "builds": [
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        },
        {
            "src": "api/index.vercel.js",
            "use": "@vercel/node"
        }
    ],
    "installCommand": "cd backend && npm ci && npm run build && cd ../frontend && npm ci",
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.vercel.js"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}