{
    "version": 2,
    "buildCommand": "cd backend && npm run build && cd ../frontend && npm run build",
    "outputDirectory": "frontend/dist",
    "installCommand": "npm ci && cd frontend && npm ci && cd ../backend && npm ci",
    "functions": {
        "api/index.vercel.js": {
            "runtime": "@vercel/node@3"
        }
    },
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.vercel.js"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}