{
    "version": 2,
    "buildCommand": "cd backend && npm ci && npm run build && cd ../frontend && npm ci && npm run build",
    "outputDirectory": "frontend/dist",
    "installCommand": "npm install",
    "functions": {
        "api/**/*.js": {
            "runtime": "nodejs22.x"
        }
    },
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.vercel.js"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}