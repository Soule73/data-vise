{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./src",
        "paths": {
            "@/*": [
                "*"
            ],
            "@routes/*": [
                "routes/*"
            ],
            "@middleware/*": [
                "middleware/*"
            ],
            "@utils/*": [
                "utils/*"
            ],
            "@controllers/*": [
                "controllers/*"
            ],
            "@data/*": [
                "data/*"
            ],
            "@models/*": [
                "models/*"
            ],
            "@services/*": [
                "services/*"
            ],
            "@validation/*": [
                "validation/*"
            ],
            "@type/*": [
                "types/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}